<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_ctr_expense_form" model="ir.ui.view">
            <field name="name">ctr.expense.form</field>
            <field name="model">ctr.expense</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="expense_type_id"/>
                            <field name="date" widget="datetime"/>
                            <field name="amount"/>
                            <field name="payment_type"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_ctr_expense_tree" model="ir.ui.view">
            <field name="name">ctr.expense.tree</field>
            <field name="model">ctr.expense</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="expense_type_id"/>
                    <field name="date" widget="datetime"/>
                    <field name="amount"/>
                    <field name="payment_type"/>
                </list>
            </field>
        </record>

        <record id="view_ctr_expense_graph" model="ir.ui.view">
            <field name="name">ctr.expense.graph</field>
            <field name="model">ctr.expense</field>
            <field name="arch" type="xml">
                <graph string="Biểu đồ chi phí" type="pie">
                    <field name="expense_type_id" type="row"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Action -->
        <record id="action_ctr_expense" model="ir.actions.act_window">
            <field name="name">Chi phí</field>
            <field name="res_model">ctr.expense</field>
            <field name="view_mode">list,form,graph</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_ctr_expense_root" 
                  name="Quản lý chi phí" 
                  sequence="1"/>
        <menuitem id="menu_ctr_expense" 
                  name="Chi phí" 
                  parent="menu_ctr_expense_root" 
                  action="action_ctr_expense"/>
    </data>
</odoo>
