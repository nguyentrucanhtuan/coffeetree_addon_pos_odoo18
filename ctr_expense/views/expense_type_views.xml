<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_expense_type_form" model="ir.ui.view">
            <field name="name">expense.type.form</field>
            <field name="model">expense.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên loại chi phí"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="expense_count"/>
                                <field name="total_amount"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Chi phí" name="expenses">
                                <field name="expense_ids" context="{'default_expense_type_id': id}">
                                    <list>
                                        <field name="name"/>
                                        <field name="date" widget="datetime"/>
                                        <field name="amount"/>
                                        <field name="payment_type"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_expense_type_tree" model="ir.ui.view">
            <field name="name">expense.type.tree</field>
            <field name="model">expense.type</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="expense_count"/>
                    <field name="total_amount"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_expense_type_search" model="ir.ui.view">
            <field name="name">expense.type.search</field>
            <field name="model">expense.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Đang hoạt động" name="active" domain="[('active','=',True)]"/>
                    <filter string="Đã lưu trữ" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Tên" name="group_by_name" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_expense_type" model="ir.actions.act_window">
            <field name="name">Loại chi phí</field>
            <field name="res_model">expense.type</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_expense_type_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo loại chi phí đầu tiên
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_expense_type"
                  name="Loại chi phí"
                  parent="menu_ctr_expense_root"
                  action="action_expense_type"
                  sequence="2"/>
    </data>
</odoo> 